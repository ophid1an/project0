<div class="container">

    <a class="button" href="/">{{__ 'back'}}</a>

    <h3>{{__ 'newPwdCreation'}}</h3>

    <form action="/new-password" method="post">

        <div class="row">
            <div class="one-half column">
                <label for="pwd">{{__ 'password'}}:</label>
                <input type="password" id="pwd" name="pwd" />
            </div>
            <div class="one-half column">
                <label for="pwd-confirm">{{__ 'passwordConfirm'}}:</label>
                <input type="password" id="pwd-confirm" name="pwd-confirm" />
            </div>
        </div>

        <input type="hidden" name="string" value="{{string}}" />

        <input class="button-primary" type="submit" value="{{__ 'submit'}}">

    </form>

</div>
