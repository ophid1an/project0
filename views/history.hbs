<div class="container">

    <div>
        <a class="button" href="/">{{__ 'back'}}</a>
    </div>

    <div class="align-center">
        <h3>{{__ 'history'}}</h3>
    </div>

    {{#if completedGames}}

        <div class="align-center">
            <h4 class="">{{__ 'statistics'}}</h4>
        </div>

        <div class="overflow-auto history">
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>{{__ 'easy'}}</th>
                        <th>{{__ 'medium'}}</th>
                        <th>{{__ 'hard'}}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{__ 'highestRating'}}</td>
                        {{#each stats.highestRating}}
                            <td>{{this}}</td>
                        {{/each}}
                    </tr>
                    <tr>
                        <td>{{__ 'avgRating'}}</td>
                        {{#each stats.avgRating}}
                            <td>{{this}}</td>
                        {{/each}}
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="align-center">
            <h4>{{__ 'completedGames'}}</h4>
        </div>

        <div class="overflow-auto completed-games">
            <table>
                <thead>
                    <tr>
                        <th>{{__ 'dateCompleted'}}</th>
                        <th>{{__ 'difficulty'}}</th>
                        <th>{{__ 'rating'}}</th>
                        <th>{{__ 'partner'}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each completedGames}}
                        <tr>
                            <td>{{date}}</td>
                            <td>{{diff}}</td>
                            <td>{{rating}}</td>
                            <td>{{otherUsername}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    {{/if}}

</div>
