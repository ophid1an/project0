<div class="container">

    <div class="row">
        <div class="one-half column">
            <a class="button" href="/">{{__ 'back'}}</a>
        </div>
    </div>

    <div class="row align-center">
        <div class="twelve columns">
            <h3>{{__ 'historyHeader'}}</h3>
        </div>
    </div>

    <div class="row">
        <div class="twelves columns">
            <h4 class="align-center">{{__ 'statistics'}}</h4>
        </div>
    </div>

    <div class="row overflow-auto">
        <div class="twelve columns">
            <table class="">
                <thead>
                    <tr>
                        <th></th>
                        <th colspan="3" class="align-center">{{__ 'histDifficultyL'}}</th>
                    </tr>
                    <tr>
                        <th></th>
                        <th class="align-center">{{__ 'easy'}}</th>
                        <th class="align-center">{{__ 'medium'}}</th>
                        <th class="align-center">{{__ 'hard'}}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{__ 'highScore'}}</td>
                        <td class="align-center">100</td>
                        <td class="align-center">70</td>
                        <td class="align-center">&mdash;</td>
                    </tr>
                    <tr>
                        <td>{{__ 'avgRating'}}</td>
                        <td class="align-center">66</td>
                        <td class="align-center">54</td>
                        <td class="align-center">&mdash;</td>
                    </tr>
                    <tr>
                        <td>{{__ 'bestPartner'}}</td>
                        <td class="align-center">nick</td>
                        <td class="align-center">&mdash;</td>
                        <td class="align-center">&mdash;</td>
                    </tr>
                    <tr>
                        <td>{{__ 'avgRatingWithBestPartner'}}</td>
                        <td class="align-center">100</td>
                        <td class="align-center">&mdash;</td>
                        <td class="align-center">&mdash;</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="twelves columns">
            <h4 class="align-center">{{__ 'completedGames'}}</h4>
            <div class="row overflow-auto">
                <div class="twelve columns">
                    <table class="">
                        <thead>
                            <tr>
                                <th class="align-center">{{__ 'dateCompleted'}}</th>
                                <th class="align-center">{{__ 'histDifficulty'}}</th>
                                <th class="align-center">{{__ 'rating'}}</th>
                                <th class="align-center">{{__ 'histPartner'}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="align-center">06/06/2017</td>
                                <td class="align-center">Εύκολο</td>
                                <td class="align-center">100</td>
                                <td class="align-center">nick</td>
                            </tr>
                            <tr>
                                <td class="align-center">14/05/2017</td>
                                <td class="align-center">Μεσαίο</td>
                                <td class="align-center">66</td>
                                <td class="align-center">&mdash;</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
