<div class="container">

    <a class="button" href="/main/">{{__ 'back'}}</a>

    <h3>{{__ 'uploadCrossword'}}</h3>

    {{#if errors}}
        {{#each errors}}
            <p class="text-danger">{{this}}</p>
        {{/each}}
    {{/if}}

    {{#if success}}
        <p class="text-success">{{success}}</p>
    {{/if}}

    <form action="/main/upload-crossword" method="post" enctype="multipart/form-data">

        <div class="row">
            <div class="twelve columns">
                <label for="file-to-upload">{{__ 'fileToUpload'}}:</label>
                <input type="file" name="file-to-upload" id="file-to-upload" required>
            </div>
        </div>

        <input class="button-primary" type="submit" value="{{__ 'submit'}}">

    </form>

    {{#if success}}
        <div class="row">
            {{#each matrix}}
                <div class="twelve columns">
                    <code>{{this}}</code>
                </div>
            {{/each}}
        </div>

        <div class="row">
            <div class="twelve columns">
                <h5><b>{{__ 'across'}}</b></h5>
                <ol>
                    {{#each defs.across}}
                        <li>{{this}}</li>
                    {{/each}}
                </ol>
                <h5><b>{{__ 'down'}}</b></h5>
                <ol>
                    {{#each defs.down}}
                        <li>{{this}}</li>
                    {{/each}}
                </ol>
            </div>
        </div>

    {{/if}}

</div>
