<div class="container">

    <a class="button" href="/">{{__ 'back'}}</a>

    <h3>{{__ 'newPwdCreation'}}</h3>

    {{#if info}}

        <p class="text-success">{{info}}</p>

    {{else}}

        {{#if error}}

            <p class="text-danger">{{error}}</p>

        {{/if}}

        <form id="forgotPwdForm" action="/forgot-password" method="post">

            <div class="row">
                <div class="one-half column">
                    <label for="email">{{__ 'email'}}:</label>
                    <input type="email" id="email" name="email" required/>
                </div>
            </div>

            <input class="button-primary" type="submit" value="{{__ 'submit'}}">

        </form>

    {{/if}}

</div>
