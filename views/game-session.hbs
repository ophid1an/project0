<div class="container">

    <div class="row">
        <div class="twelve columns" id="buttons">
            <a id="messages-button" class="button hidden">{{__ 'messages'}}</a>
            <a id="home-button" class="hidden" href="/main">{{__ 'home'}}</a>
            <div class="u-pull-right">
                <a id="options-button" class="button">{{__ 'options'}}</a>
                <div class="dropdown-content hidden" id="dropdown-list">
                    <a id="help-button">{{__ 'help'}}</a>
                    <a id="complete-button" class="hidden">{{__ 'complete'}}</a>
                </div>
            </div>
        </div>
    </div>

    <input type="text" class="pos-abs-hidden" id="input" name="input" autocomplete="off" value="">

    <div class="row">
        <div class="twelve columns overflow-auto nowrap">
            <span id="info-this">&nbsp;</span><span class="hidden" id="divider"> - </span><span class="hidden" id="info-other">&nbsp;</span>
        </div>
    </div>

    <div class="row">
        <div class="twelve columns overflow-auto nowrap" id="info">&nbsp;</div>
    </div>

    <div class="row">
        <div class="twelve columns overflow-auto nowrap" id="def-single">&nbsp;</div>
    </div>

    <div class="row border-dotted spacing-special">
        <canvas id="canvas">
          Canvas element is not supported!
        </canvas>
    </div>

    <div id="defs" class="row border-dotted overflow-auto">
        <h5 class="border-btm align-center">
          <b>{{__ 'across'}}</b>
        </h5>
        <div id="defs-across"> </div>
        <h5 class="border-btm align-center">
          <b>{{__ 'down'}}</b>
        </h5>
        <div id="defs-down"> </div>
    </div>

    <script src="/javascripts/game-session.js"></script>

</div>
